<style>
  .echarts-box {
    padding-top: 20px;
  }

  #main {
    width: 100%;
    height: 500px;
  }

  .title-td {
    max-width: 100px;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
<div class="content-box">
  <div class="row">
    <div class="echarts-box col-sm-8">
      <div id="main"></div>
    </div>
    <div class="col-sm-4">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th> 最新文章 </th>
            <th> 创建时间 </th>
            <th> 发布状态 </th>
          </tr>
        </thead>
        <tbody>
          <% if(data.list && data.list.length > 0) {%>
          <% data.list.forEach(function(item,index){%>
          <tr>
            <td class="title-td"> <a href="/detail/<%= item._id %>"><%= item.title %></a> </td>
            <td> <%= YMDFormat(item.createtime) %> </td>
            <td> <%= item.ispublish == true ? '发布' : '暂未发布' %> </td>
          </tr>
          <% }) %>
          <% }else{ %>
          <tr>
            <td colspan="2">暂无数据~</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script src="/assets/js/echarts.min.js"></script>
<script type="text/javascript">
  let xData = '<%= data.xData %>'.split(',');
  let yData = '<%= data.yData %>'.split(',');
  // 基于准备好的dom，初始化echarts实例
  var myChart = echarts.init(document.getElementById('main'));
  // 指定图表的配置项和数据
  var option = {
    title: {
      text: '文章数量'
    },
    tooltip: {},
    legend: {
      data: ['文章数量']
    },
    xAxis: {
      data: xData
    },
    yAxis: {},
    series: [{
      name: '文章数量',
      type: 'bar',
      barMaxWidth: '30px',
      data: yData
    }]
  };

  // 使用刚指定的配置项和数据显示图表。
  myChart.setOption(option);
</script>