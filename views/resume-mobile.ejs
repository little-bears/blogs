  <style>
    body {
      background: url(/assets/images/bg.png);
      background-position: top center;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }

    .container {
      padding-left: 0;
      padding-right: 0;
    }

    p {
      margin: 0;
      padding: 0;
      line-height: 1.5;
    }

    .navbar {
      margin: 0;
    }

    .page-box {
      box-sizing: border-box;
      padding: 4.51vw 0;
    }

    .resume-box {
      box-sizing: border-box;
      padding: 4.51vw;
      background: rgba(255, 255, 255, 0.5);
      box-shadow: 0 0 0.75vw #a8a8a8;
      color: #333333;
      position: relative;
    }

    .resume-box:hover {
      box-shadow: 0 0 0.75vw #666666;
    }

    .name {
      font-size: 3.2vw;
      text-align: center;
    }

    .contact {
      display: flex;
      justify-content: space-around;
      font-size: 1.8vw;
      margin: 1.6vw 0;
    }

    .content-box {
      box-sizing: border-box;
      padding-left: 16vw;
      font-size: 1.6vw;
    }

    .content-item {
      border-left: 0.15vw solid #333;
      box-sizing: border-box;
      padding: 1.5vw 1.5vw 0 1.5vw;
      position: relative;
    }

    .content-title {
      width: 14vw;
      font-size: 1.6vw;
      text-align: center;
      position: absolute;
      top: 1.5vw;
      right: calc(100% + 1.5vw);
    }

    .content-main-subject {
      display: flex;
      margin: 1.5vw 0;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .content-main p.content-main-text {
      font-size: 1.4vw;
    }

    .text-space-between {
      display: flex;
      justify-content: space-between;
    }

    .content-main p.content-main-tips {
      font-size: 1.1vw;
      color: #333333;
    }

    .item-margin {
      margin: 1vw 0;
    }

    @media screen and (max-width: 992px) {
      .page-box {
        padding: 2vw;
      }

      .name {
        font-size: 20px;
      }

      .contact {
        font-size: 13px;
      }

      .content-main-subject {
        font-size: 13px;
      }

      .resume-box {
        padding: 3vw 0;
      }
    }

    .btn-group {
      position: absolute;
      top: 15px;
      left: 20px;
      display: flex;
      align-items: center;
      z-index: 50;
    }

    .btn-group img {
      width: 30px;
      height: 30px;
      padding: 2px;
      background: #ffffff;
      margin-right: 20px;
      border-radius: 2px;
      border: 1px solid #f5f5f5;
      overflow: hidden;
    }

    .btn-group .type-atcive img {
      box-shadow: 0 0 0.75vw #a8a8a8;
    }

    .btn-group img:hover {
      box-shadow: 0 0 0.75vw #666666;
    }
  </style>
</head>

