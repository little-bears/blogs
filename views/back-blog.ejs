<style>
  .container {
    padding: 40px 0;
  }

  .form-box {
    margin-bottom: 20px;
    display: flex;
    align-items: center;
  }

  .form-group {
    margin-bottom: 0;
  }

  .new-a-box {
    margin-left: 20px;
    min-width: 50px;
  }

  .new-blog {
    padding: 6px 10px;
    border-radius: 4px;
    background: #337ab7;
    font-size: 12px;
    color: #fff;
  }

  .new-blog:hover {
    color: #fff;
  }

  .flex-box {
    display: flex;
    align-items: center;
  }

  .label-title {
    min-width: 60px;
  }

  .form-control {
    min-width: 120px;
  }

  .btn-group {
    margin: 0 10px;
  }

  .btn-group button {
    margin: 0 2px !important;
  }

  .pagination-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .pagination li {
    cursor: pointer;
  }
</style>
<div class="content-box">
  <form class="form-box">
    <div class="flex-box form-group">
      <label class="label-title" for="classify">文章类别</label>
      <select class="form-control" name="classify" id="classify" value="">
        <% if(data.classify && data.classify.length > 0) {%>
        <option style='display: none'></option>
        <% data.classify.forEach(function(item,index){%>
        <% if(data.queryClassify == item._id) {%>
        <option value="<%= item._id %>" selected><%= item.classify %></option>
        <% }else{ %>
        <option value="<%= item._id %>"><%= item.classify %></option>
        <% } %>
        <% }) %>
        <% } %>
      </select>
    </div>
    <div class="btn-group">
      <button type="button" class="queryBtn btn btn-primary">查询</button>
      <button type="button" class="clearBtn btn btn-default">清空</button>
    </div>
    <div class="new-a-box">
      <a class="new-blog" href="/back-blog-edit">新建</a>
    </div>
  </form>
  <div class="col-sm-12 table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th> 笔记标题 </th>
          <th> 笔记分类 </th>
          <th> 发布状态 </th>
          <th> 添加时间 </th>
          <th> 操作 </th>
        </tr>
      </thead>
      <tbody>
        <% if(data.docs && data.docs.length > 0) {%>
        <% data.docs.forEach(function(item,index){%>
        <tr>
          <td> <a href="/detail/<%= item._id %>"><%= item.title %></a> </td>
          <td> <%= data.classifyMap[item.classify] %> </td>
          <td> <%= item.ispublish == true ? '发布' : '暂未发布' %> </td>
          <td> <%= dateFormat(item.createtime) %> </td>
          <td>
            <button type="button" class="updateBlog btn btn-info btn-sm" data-id="<%= item._id %>">修改</button>
            <button type="button" class="deleteBlog btn btn-danger btn-sm" data-id="<%= item._id %>">删除</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
      <% }else{ %>
      <tr>
        <td colspan="5">暂无数据~</td>
      </tr>
      <% } %>
    </table>
    <div class="pagination-box">
      <nav>
        <ul class="pagination">
          <li class="lastPage  <%= data.currentPage == 1 ? 'disabled' : '' %>">
            <a aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% var pageStart = parseInt(data.currentPage) + 2 > parseInt(data.pageTotal) ? parseInt(data.currentPage) + (parseInt(data.pageTotal) - parseInt(data.currentPage)) - 4 : parseInt(data.currentPage) - 2 %>
          <% for(var i = pageStart,cnt = 1; i <= parseInt(data.pageTotal) && cnt <= 5; i++) { %>
          <% if(i > 0){ %>
          <li class="changePage <%= i == data.currentPage ? 'active' : '' %>" data-page="<%= i %>"><a><%= i %><span
                class="sr-only">(current)</span></a></li>
          <% cnt++ %>
          <% } %>
          <% } %>
          <li class="nextPage <%= data.currentPage == data.pageTotal ? 'disabled' : '' %>">
            <a aria-label="Previous">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
      <p class="total-page">共 <span><%= data.pageTotal %></span> 页</p>
    </div>
  </div>
</div>
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
  integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous">
  </script>
<script>
  function getQueryVariable(variable) {
    let query = window.location.search.substring(1);
    let vars = query.split("&");
    for (var i = 0; i < vars.length; i++) {
      let pair = vars[i].split("=");
      if (pair[0] == variable) { return pair[1]; }
    }
    return (false);
  }
  function getPageUrl() {
    let classify = getQueryVariable("classify");
    if (classify) {
      return '/back-blog?classify=' + classify + '&page='
    } else {
      return '/back-blog?page='
    }
  }
  let currentPage = '<%= parseInt(data.currentPage) %>';
  let pageTotal = '<%= parseInt(data.pageTotal) %>';
  // 翻页
  $('.changePage').click(function () {
    let pageUrl = getPageUrl();
    location.href = pageUrl + $(this).data('page')
  })
  $(".lastPage").click(function () {
    let page = parseInt(currentPage);
    if (page <= 1) {
      return
    } else {
      let pageUrl = getPageUrl();
      location.href = pageUrl + (page - 1);
    }
  })
  $(".nextPage").click(function () {
    let page = parseInt(currentPage);
    if (page >= pageTotal) {
      return
    } else {
      let pageUrl = getPageUrl();
      location.href = pageUrl + (page + 1);
    }
  })

  $(".queryBtn").click(function () {
    let classify = $("#classify").val();
    window.location.href = '/back-blog?classify=' + classify;
  })
  $(".clearBtn").click(function () {
    let classify = $("#classify").val();
    window.location.href = '/back-blog';
  })
  $(".updateBlog").click(function () {
    let id = $(this).data("id");
    window.location.href = '/back-blog-edit?id=' + id
  })
  $(".deleteBlog").click(function () {
    let id = $(this).data("id");
    if (id && id.length > 0) {
      axios.post('/deleteBlog', {
        id: id
      }).then(function (res) {
        if (res.data.code == 0) {
          console.log(res.data.msg);
          window.location.reload(true);
        } else {
          console.log(res.data.msg);
        }
      }).catch(function (err) {
        console.log(err);
      })
    }
  })
</script>